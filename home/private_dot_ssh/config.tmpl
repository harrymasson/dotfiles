# ~/.ssh/config
# Source: chezmoi: home/private_dot_ssh/config.tmpl
{{- $machineType := .machineType | default "personal" -}}

{{ if eq $machineType "personal" -}}
Host github.com
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519
  IdentitiesOnly yes

Host *
  UseKeychain yes
{{- else }}
# Machine-local overrides (work hosts/keys). Silently ignored if absent.
Include config.local
{{- end }}
